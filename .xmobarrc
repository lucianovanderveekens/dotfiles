Config { -- appearance
         -- font         = "xft:San Francisco Display Medium:size=9:bold"
         font         = "xft:DejaVu Sans Mono:size=9:bold"
         -- font         = "xft:Ubuntu Mono derivative Powerline:size=11:bold"
         -- font         = "xft:Unifont:size=10:bold"
       , bgColor      = "black"
       , fgColor      = "grey"

       , position     = Top
       --, border       = TopB
       --, borderColor  = ""
       --, borderWidth = 0

       , lowerOnStart = True
       , commands     = [ Run Weather "EGPF" ["-t","<station>: <tempC>C","-L","18","-H","25","--normal","green","--high","red","--low","lightblue"] 36000
                        , Run Network "eth0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                        , Run Cpu ["-t", "<fc=red>Cpu <total>%</fc>", "-L","3","-H","50","--high","red"] 10
                        , Run Memory ["-t","<fc=yellow>Mem <usedratio>%</fc>"] 10
                        , Run Swap ["-t", "<fc=yellow>Swap <usedratio>%</fc>"] 10
                        , Run Com "uname" ["-s","-r"] "" 36000
                        , Run Com "hostname" [] "" 36000
                        , Run Com "/bin/bash" ["-c", "~/Code/dotfiles/spaces.sh"] "spaces" 10
                        , Run Date "<fc=#ee9a00>%a %b %_d %Y %H:%M</fc>" "date" 10
                        , Run StdinReader
                        , Run Com "/bin/bash" ["-c", "~/Code/dotfiles/volume.sh"] "volume" 1
                        , Run DiskU [("/", "<fc=lightblue>/ <usedbar></fc>"), ("/home", "<fc=lightblue>/home <usedbar></fc>")] ["-L", "20", "-H", "50", "-m", "1", "-p", "3"] 20
                        ]
       , sepChar      = "%"
       , alignSep     = "}{"
       , template     = "%StdinReader% }{ %cpu% %memory% %swap% %disku% %volume% <fc=pink>%hostname%</fc> %date% | %spaces%"
       }

