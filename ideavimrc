set clipboard+=unnamed
set ignorecase
set smartcase
set incsearch
"set hlsearch
set number
set relativenumber
set hls

vmap = :action ReformatCode<CR>

" Remove search highlights
nnoremap <silent> <C-l> :nohl<CR><C-l>

set visualbell

