let mapleader =" "

set clipboard+=unnamed
set ignorecase
set smartcase
set incsearch
"set hlsearch
set number
set relativenumber
set hls

map <leader>ff <Action>(GotoFile)
map <leader>fc <Action>(GotoClass)
map <leader>fs <Action>(FileStructurePopup)
map <leader>fo <Action>(RecentFiles)
map <leader>fg <Action>(FindInPath)

map <leader>i <Action>(GotoImplementation)

vmap = :action ReformatCode<CR>

" replace selection
vnoremap <C-r> "hy:%s/<C-r>h//gc<left><left><left>

" Remove search highlights
nnoremap <silent> <C-l> :nohl<CR><C-l>

set visualbell

" nmap <leader>d <Action>(CloseEditor)
" CloseContent also works with diff tabs 
nmap <leader>q <Action>(CloseContent)
nmap <leader>l <Action>(NextTab)
nmap <leader>h <Action>(PreviousTab)

map <leader>ff <Action>(GotoFile)

nmap <C-o> <Action>(Back)
nmap <C-i> <Action>(Forward)

"nnoremap <leader>d "_d
"vnoremap <leader>d "_d

vmap K <Action>(MoveLineUp)
vmap J <Action>(MoveLineDown)
